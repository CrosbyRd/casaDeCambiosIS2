.dmypy.json
dmypy.json
.pyre/
.pytype/
cython_debug/
.ruff_cache/

# --- Docs / site builders ---
/site

# --- IDEs / editores / OS ---
.DS_Store
.idea/
.vscode/
*.swp
*.swo
*~

# --- Otros especÃ­ficos ---
.spyderproject
.spyproject
.ropeproject
.abstra/
.pypirc
.cursorignore
.cursorindexingignore

